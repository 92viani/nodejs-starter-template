{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../dist",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/server/*": ["./*"],
      "@/database/*": ["database/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist", ".next"]
}
