{
  "name": "nestjs-starter-kit",
  "packageManager": "yarn@3.2.1",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "web:build": "yarn workspace web build",
    "web:start": "yarn workspace web start",
    "web:dev": "yarn workspace web dev",
    "web:lint": "yarn workspace web lint",
    "server:build": "yarn workspace server build",
    "server:start": "yarn workspace server start",
    "server:dev": "yarn workspace server dev",
    "lint": "eslint \"{src,packages,apps,libs,test}/**/*.{ts,tsx}\" --fix",
    "format": "prettier --write \"{src,packages,apps,libs,test}/**/*.{ts,tsx}\""
  },
  "devDependencies": {
    "@yarnpkg/sdks": "^3.0.0-rc.6",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "latest",
    "flow-bin": "^0.179.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3",
    "typescript-language-server": "^0.11.0"
  },
  "dependencies": {
    "dayjs": "^1.11.3"
  }
}
